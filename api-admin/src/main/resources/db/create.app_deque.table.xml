<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd


                                       http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd"
                   logicalFilePath="create.app_deque.table.xml">
    <changeSet author="Ruslan" id="initial creating table app_deque" context="all">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="app_deque"/>
            </not>
        </preConditions>
        <createTable tableName="app_deque">
            <column name="floorNumber"  type="int">
                <constraints nullable="false"/>
            </column>
            <column name="direction"  type="varchar(4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey  columnNames="floorNumber, direction"
                        constraintName="pk_app_deque"
                        schemaName="api_admin"
                        tableName="app_deque"/>
    </changeSet>
</databaseChangeLog>